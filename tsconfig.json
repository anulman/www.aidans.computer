{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
